{% extends '@AtomicDesign/layout.html.twig' %}

{% block title %}
    {{ component.name }}
    {% if story is defined %} / {{ story }}{% endif %}
    - {{ parent() }}
{% endblock %}

{% block body %}
<div class="container-fluid component">
    {% include '@AtomicDesign/molecules/render.html.twig' with {
        props: {
            embed: path('_atomic_design_embed', { component: component.name, story: story }),
        }
    } %}
</div>
{% endblock %}
